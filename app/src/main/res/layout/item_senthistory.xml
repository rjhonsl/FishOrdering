<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:padding="5dp"
              android:id="@+id/ll_items"
              android:background="@drawable/bg_material_transparent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white_200"
        app:cardCornerRadius="3dp"
        android:background="@drawable/bg_material_transparent"
    >



        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:gravity="center_vertical"
                      android:elevation="3dp"
                      android:orientation="horizontal" android:baselineAligned="false">

            <RelativeLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_gravity="center"
                          android:layout_weight="1"
                          android:padding="16dp">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Mar 31, 2015 9:20AM"
                          android:textSize="12sp"
                          android:textColor="@color/gray_500"
                          android:layout_alignParentLeft="true"
                          android:id="@+id/txtTimeSent"
                />


                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="FAILED"
                          android:paddingLeft="5dp"
                          android:textSize="12sp"
                          android:layout_alignParentRight="true"
                          android:id="@+id/txtIsFailed"
                          android:textColor="@color/red_300"
                />

                <ImageView android:layout_width="25dp"
                             android:layout_height="23dp"
                             android:layout_alignParentRight="true"
                             android:id="@+id/btnResend"
                             android:padding="3dp"
                           android:layout_marginLeft="16dp"
                           android:layout_alignBottom="@+id/txtItem"
                             android:background="@color/orange_fishta"
                             android:src="@drawable/ic_send_white_24dp"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Bangus 20PCs, Asuhos 20KGs, Bangus 20PCs, Asuhos 20KGs, Bangus 20PCs, Asuhos 20KGs,Bangus 20PCs, Asuhos 20KGs"
                          android:maxLines="10"
                          android:layout_toLeftOf="@+id/btnResend"
                          android:paddingTop="10dp"
                          android:layout_alignParentLeft="true"

                          android:id="@+id/txtItem"
                          android:textSize="14sp"
                          android:layout_below="@id/txtTimeSent"
                          android:textColor="@color/gray_700"
                />




            </RelativeLayout>


        </LinearLayout>

        <!--<ImageButton android:layout_width="15dp"-->
                     <!--android:layout_height="15dp"-->
                     <!--android:layout_marginRight="5dp"-->
                     <!--android:layout_marginTop="5dp"-->
                     <!--android:id="@+id/btnRemove"-->
                     <!--android:visibility="visible"-->
                     <!--android:layout_gravity="right"-->
                     <!--android:background="@drawable/bg_material_transparent"-->
                     <!--android:src="@drawable/ic_close_lightorange_24dp"-->
        <!--/>-->

    </android.support.v7.widget.CardView>




</LinearLayout>