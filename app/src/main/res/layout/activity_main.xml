<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.OrderItems.MainActivity">

    <include layout="@layout/toolbar"
             android:id="@+id/toolbar2"
             android:layout_alignParentTop="true"
             android:layout_height="wrap_content"
             android:layout_width="match_parent"/>

    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSelectedStores"
        android:textSize="16sp"
        android:layout_below="@id/toolbar2"
        android:textColor="@color/gray_100"
        android:background="@color/gray_700"
        android:text="SELECT STORE"
        android:elevation="3dp"
        android:padding="5dp"
    />

    <android.support.v7.widget.RecyclerView
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llholder"
        android:layout_below="@id/btnSelectedStores"
        android:id="@+id/rvItems">

    </android.support.v7.widget.RecyclerView>

    <!--<ListView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
    <!--/>-->


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:id="@+id/img_noitems">


        <ImageView android:layout_width="160dp"
                   android:layout_height="160dp"
                   android:src="@drawable/no_items2"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/gray_400"
                  android:textSize="16sp"
                  android:padding="6dp"
                  android:text="No Items Yet"
        />


    </LinearLayout>

    <View
        android:background="@color/bluegrey_400"
        android:layout_alignTop="@+id/llholder"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/llholder"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSend"
            android:text="SEND"
            android:background="@drawable/bg_material_transparent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAddproduct"
            android:text="ADD"
            android:background="@drawable/bg_material_transparent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <android.support.design.widget.FloatingActionButton
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_send_white_24dp"
        android:layout_width="wrap_content"
        android:id="@+id/btnSendOrder"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAdditem"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_width="wrap_content"
        android:id="@+id/btnAdditem"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
</RelativeLayout>
