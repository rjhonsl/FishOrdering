<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/transparent"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <EditText android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="username"
        android:textColorHint="@color/white_200"
        android:gravity="center"
        android:textColor="@color/white_200"
        android:id="@+id/dialog_edt_username"
        android:textSize="20sp"
        android:padding="10dp"
    />

    <EditText android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="password"
        android:textColorHint="@color/white_200"
        android:gravity="center"
        android:textColor="@color/white_200"
        android:id="@+id/dialog_edt_password"
        android:textSize="20sp"
        android:padding="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:gravity="center"
        android:textColor="@color/white_200"
        android:background="@drawable/bg_material_transparent_darker_pressed"
        />
</LinearLayout>
